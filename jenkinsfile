// Declare any variables if required

pipeline {
    agent any
    environment {
        def BUILDVERSION = sh(script: "echo `date +%s`", returnStdout: true).trim()
    }

    stages {
        stage('checkout') {
            steps { 
                checkout scm
            }
        }

        stage('list all files') {
            steps { 
                sh "ls -lrt"
            }
        }

        stage ('Run playbooks'){
            steps{
                echo "cmg to run playbooks"
            }
        }

        //stage ('clean workspace')

    }
}